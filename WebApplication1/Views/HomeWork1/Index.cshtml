
@{
    ViewData["Title"] = "Index";
}

<h1>全台景點介紹</h1>
<div class="row row-cols-1 row-cols-md-3 g-4"></div>
    

@section Scripts{
    <script src="~/js/travel.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <script>
        
        const section = spots.CommonFormat.Section;
        const card = document.querySelector(".row");
        const docFrag = document.createDocumentFragment();
        section.forEach((elem, index) => {
            const divcol = document.createElement("div");
            const divcard = document.createElement("div");
            const divcardbody = document.createElement("div");
            const img = document.createElement("img");
            try {
                img.src = elem.file.img[0].text;
            }
            catch {
                img.src ="";
            }
            
            img.classList.add("card-img-top");

            // console.log(img.src);

            divcol.classList.add("col");
            divcard.classList.add("card");
            divcardbody.classList.add("card-body");
            //divcardbody.style.width = "calc(100% - 50px)";
            //divcol.classList.add("text-truncate");
            divcol.classList.add("overflow-hidden");
            divcol.style.height = "700px";
            divcardbody.style.background = "lightblue";
            const h5 = document.createElement("h5");
            const h5title=document.createTextNode(`title: ${elem.stitle}`);
            h5.appendChild(h5title);
            h5.style.fontSize = "25px";
            const para = document.createElement("span");
            para.classList.add("card-text");
            const pbody = document.createTextNode(`information: ${elem.xbody}`);
            para.appendChild(pbody);

            divcardbody.appendChild(h5);
            divcardbody.appendChild(para);
            divcard.appendChild(img);
            divcard.appendChild(divcardbody);
            divcol.appendChild(divcard);
            docFrag.appendChild(divcol);
        });
        card.appendChild(docFrag);
    </script>
}
